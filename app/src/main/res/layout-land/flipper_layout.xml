<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
                tools:context="com.erza.prizrencityguide.MainActivity"
                android:paddingBottom="60dp">



    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/viewFlipper">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic3"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic4"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic5"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic6"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic7"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView7"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic8"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView8"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic9"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView9"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic10"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView10"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic12"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView11"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic13"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView12"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic14"
            />


    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:paddingTop="13dp">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"



            />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="250dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <TextView
                android:text="Hello, "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHello"
                android:textSize="32sp"
                android:textStyle="normal|bold"
                android:textColor="@color/bb_darkBackgroundColor"
                android:layout_alignBaseline="@+id/tv_Username"
                android:layout_alignBottom="@+id/tv_Username"
                android:layout_toLeftOf="@+id/tv_Username"
                android:layout_toStartOf="@+id/tv_Username"
                android:fontFamily="cursive"
                android:gravity="right"
                android:layout_weight="0.05"
                android:autoText="false"/>

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tv_Username"
                android:textSize="32sp"
                android:text="Prizren Tourist"
                android:fontFamily="cursive"
                android:layout_weight="1"
                android:layout_below="@+id/viewFlipper"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textStyle="normal|bold"
                android:gravity="left"
                android:layout_width="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="330dp"
        android:paddingRight="23dp">

        <Button
            android:text="SPORTS EVENTS"
            android:id="@+id/eventet_sportive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:background="@color/card_background"
            android:textSize="18sp"
            android:textColor="@color/bb_tabletRightBorderDark"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:text="CULTURAL EVENTS"
            android:id="@+id/eventet_kulturore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:background="@color/card_background"
            android:textSize="18sp"
            android:textColor="@color/bb_tabletRightBorderDark"
            android:textStyle="normal|bold"/>

    </LinearLayout>


</RelativeLayout>
    </ScrollView>
