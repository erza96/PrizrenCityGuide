<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.erza.prizrencityguide.AboutUs.SponsoredFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/card_background"
            android:id="@+id/bgWhite"
            android:background="@drawable/card_background"
            android:paddingLeft="20dp"
            android:paddingEnd="-20dp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:text="Sponsored"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PZDevelopers"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="24sp"
                    android:textColor="@color/card_background"/>
            </FrameLayout>

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/dokufest"
            android:id="@+id/ivDokufest"
            android:clickable="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/upz"
                android:id="@+id/ivUpz"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
