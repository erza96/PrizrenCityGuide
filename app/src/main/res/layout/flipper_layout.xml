<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:gravity="center"
    android:layout_marginTop="0dp"
    tools:context="com.erza.prizrencityguide.MainActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/viewFlipper">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic3"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic4"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic5"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic6"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic7"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView7"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic8"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView8"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic9"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView9"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic10"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView10"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic12"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView11"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic13"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView12"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic14"
            />


    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"



            />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventet_kulturore"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/white"
            android:text="Cultural  Events"
            android:textStyle="bold|italic"
            android:layout_above="@+id/eventet_sportive"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventet_sportive"
            android:background="@android:color/black"
            android:text="Sports   Events"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </LinearLayout>
    <TextView
        android:text="Hello, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFlipper"
        android:layout_marginBottom="16dp"
        android:id="@+id/tvHello"
        android:textSize="24sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHello"
        android:layout_toRightOf="@+id/tvHello"
        android:layout_toEndOf="@+id/tvHello"
        android:layout_below="@+id/viewFlipper"
        android:id="@+id/tv_Username"
        android:textSize="24sp"
        android:text="Prizren Tourist"
        android:fontFamily="cursive"/>


</RelativeLayout>
