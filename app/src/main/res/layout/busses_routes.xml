<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_routes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.erza.prizrencityguide.Busses.Routes">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/busclipart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/busclipart"
        android:paddingTop="30dp"
        android:id="@+id/route_id"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/route_id"
        android:id="@+id/busses_route_info"
        android:text="@string/busses_route_info"
        android:textSize="15dp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_below="@+id/busses_route_info"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_timetable"
        android:id="@+id/text1234"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bustimetablepreview"
        android:layout_below="@+id/text1234"/>

</RelativeLayout>
