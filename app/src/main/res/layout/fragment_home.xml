<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.erza.prizrencityguide.Fragments.Home">




    <TextView
        android:text="Activities in Prizren:"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_marginBottom="143dp"
        android:layout_above="@+id/eventet_kulturore"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:text="Hello, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/tvHello"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHello"
        android:layout_toRightOf="@+id/tvHello"
        android:layout_toEndOf="@+id/tvHello"
        android:id="@+id/tv_Username"
        android:textSize="18sp"/>

</RelativeLayout>
