<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkorange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@color/yellow</item>
        <item name="android:textViewStyle">@color/colorAccent</item>
    </style>

    <style name="editTextBackgroundAppTheme">
        <item name="android:editTextBackground">@color/blue</item>
    </style>

    <style name="editTextBackgroundCustomTheme">
        <item name="android:editTextBackground">@color/darkorange</item>
    </style>
</resources>